@model CreateIssueFormModel

@{
    ViewData["Title"] = "Create Issue";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6  col-lg-8">
            <form method="post">
                <div class="form-group">
                    <label asp-for="DescriptionIssue"></label>
                    <input asp-for="DescriptionIssue" class="form-control" placeholder="enter issue here">
                    <span asp-validation-for="DescriptionIssue" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateOn"></label>
                    <input asp-for="CreateOn" class="form-control" placeholder="System.DateTime.UtcNow">
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
